{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QoreDB",
  "version": "0.1.0",
  "identifier": "com.rapha.qoredb",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "QoreDB",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/raphplt/QoreDB/releases/latest/download/latest.json"
      ],
      "pubkey": "${TAURI_UPDATER_PUBKEY}",
      "dialog": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
